@import url(http://fonts.googleapis.com/css?family=Open\+Sans:400,300,700,800)

LIME_GREEN = #b9d663
TURQ = #4ed1ff
AQUA = #34a6a8
MARINE = #00485b
OPAQUE_MARINE = rgba(0, 72, 91, 0.7)
OPAQUE_AQUA = rgba(48, 154, 156, 0.3)

SUBJECT_HEIGHT = 484
SUBJECT_WIDTH = 532
LEFT_OFFSET = -(SUBJECT_WIDTH / 2)
LEFT_OFFSET_ADJUST = 50

.capitalized-text
  text-transform uppercase
  font-weight 700
  letter-spacing 2px

@import './secondary-pages/secondary-pages'
@import './tutorial/tutorial'
@import './classify/menu'
@import './user-goals/user-goals'

@import './zooniverse/profile'
@import './zooniverse/footer'

#readymade
  div
    font-family 'Open Sans' sans-serif
    -webkit-font-smoothing: antialiased
  button
    outline none
    border 0
    &:hover
      cursor pointer

  .home-content
    display none

  &[data-location-hash="#/"]
    .readymade-site-link
      opacity 1.0
    .readymade-main-stack
      margin-top 200px

    .readymade-site-background
      opacity 1
      &:after
        display none

    .home-content
      height 850px
      padding-top 185px
      display block !important
      background-color #fff
      color AQUA
      overflow auto
      h2, p
        width 60%
        @media screen and (max-width: 900px)
          width 100%
      p
        line-height 2em
      h2
        @extend .capitalized-text
        font-size 18px

  // pages to be full screen width:
  &[data-location-hash="#/classify"]
  &[data-location-hash="#/about"]
  &[data-location-hash="#/education"]
  &[data-location-hash="#/team"]
  &[data-location-hash="#/profile"]
    .readymade-main-stack
      margin 0
      width auto

  .readymade-frame-controls
    display none

  .readymade-main-stack
    overflow auto
    min-height 500px

  .readymade-discuss-page
    width auto

  .readymade-site-background-effect
    display none

  .readymade-site-header
    transition background-color 0.5s ease

  .readymade-site-background
    opacity 0.8
    &:after
      content ""
      background-color AQUA
      opacity 0.7
      height 100%
      width 100%
      position absolute

  .readymade-project-producer
    display none

  .readymade-project-title
    font-size 14px
    font-weight 700
    letter-spacing 2px

  .readymade-project-description
    max-width 720px
    font-weight 400
    font-size 14px
    display inline-block
    margin-bottom 20px

  .readymade-project-summary
    max-width 900px
    font-size 50px
    font-weight  800
    text-transform uppercase
    letter-spacing 5px
    margin-bottom 80px

  .readymade-site-link
    text-transform none
    font-weight 400
    font-size 14px
    opacity 0.6
    letter-spacing 0px
    &:hover
      background transparent
    &.active
      opacity 1
      background-color transparent
    &:nth-child(1) // hide home link
      display none
    &:active
      color LIME_GREEN

  .readymade-classifier
    overflow hidden
    #location-data
      font-size 14px
      text-align center
      margin 50px auto 0 auto
      a
        color #fff
        text-decoration none
        &:hover
          text-decoration underline
      h2
        @extend .capitalized-text
        font-size 14px
        margin-bottom 5px
      p
        font-weight 400
        margin 0 0 10px 0
    .readymade-decision-tree-container
      display block
      width unit(SUBJECT_WIDTH, 'px')
      margin 0 auto
      .decision-tree
        padding 0 !important
        button[name="decision-tree-go-back"]
          display none
        button[name="decision-tree-confirm-task"]
          display inline-block
          float left
          height 50px
          font-weight 800
          font-size 16px
          width 50%
          margin 0
          border 2px solid LIME_GREEN
          background-color LIME_GREEN
          -webkit-font-smoothing antialiased
          &:hover
            background-color darken(LIME_GREEN, 5)
          &:disabled
            opacity 1
        .decision-tree-question
          display none
        .decision-tree-choice
          display none
        .decision-tree-confirmation
          width unit(SUBJECT_WIDTH, 'px')
          overflow auto
          margin 30px 0
        .decision-tree-task
          display block !important // prevent decision tree from blinking in between subjects
    .readymade-subject-viewer-container
      width 100%
      padding 0
      border-radius 0px
      min-height unit(SUBJECT_HEIGHT, 'px')
      position relative
      display block
      background none
      .marking-surface
        height unit(SUBJECT_HEIGHT, 'px')
        width unit(SUBJECT_WIDTH, 'px')
        cursor url("cursor.svg"), auto
        .marking-surface-svg
          border-radius 5px
      .summary-overlay
        height unit(SUBJECT_HEIGHT, 'px')
        width unit(SUBJECT_WIDTH, 'px')
        background-color OPAQUE_MARINE
        position absolute
        top 0px
        left unit(LEFT_OFFSET - LEFT_OFFSET_ADJUST, 'px')
        transition-property margin-left, left
        transition-duration 1.0s
        text-align left
        border-radius 5px
        z-index 1
        @media screen and (max-width: 1070px)
          left -800px
        h1
          font-size 28px
        p
          margin 30px 0 0 0
          &.bold-data
            margin 0
            font-size 20px
            font-weight 800
        a
          display inline-block
          border 2px solid #fff
          color #fff
          border-radius 5px
          padding 0 10px
          height 40px
          line-height 40px
          margin-top 30px
          &:hover
            cursor pointer
            background-color #fff
            color MARINE
        .prev-image
          position absolute
          top 0px
          right 0px
          height unit(SUBJECT_HEIGHT, 'px')
          z-index -1
          border-radius 5px
        .content
          width 150px
          height 100%
          position absolute
          top 0px
          left 80%
          margin-left -75px
          text-align left
          transition all 1s
        &.centered
          left 50%
          margin-left unit(LEFT_OFFSET, 'px')
          .content
            left 50%
            text-align center
        &.offscreen-left
          left -800px
        &:after
          content ""
          background-color MARINE
          border-radius 5px
          opacity 0.7
          height 100%
          width 100%
          top 0px
          position absolute
          z-index -1
      .readymade-subject-viewer
        width unit(SUBJECT_WIDTH, 'px')
        margin 0 auto
      .left-image, .right-image
        position absolute
        top 0px
        border-radius 5px
        transition all 1s ease
      .right-image
        left 50%
        width unit(SUBJECT_WIDTH, 'px')
        height unit(SUBJECT_HEIGHT, 'px')
        margin-left unit(LEFT_OFFSET, 'px')
        transition-property all
        transition-duration 1.0s
        right auto
        pointer-events none
        img
          height unit(SUBJECT_HEIGHT, 'px')
          width unit(SUBJECT_WIDTH, 'px')
          border-radius 5px
        .right-image-overlay
          background-color OPAQUE_MARINE
          border-radius 5px
          position absolute
          opacity 0.7
          height 100%
          width 100%
          transition all 1s
          &.invisible
            opacity 0
        &.right
          left 100%
          margin-left unit(LEFT_OFFSET + LEFT_OFFSET_ADJUST, 'px')
          &.offscreen-right
            margin-left unit((SUBJECT_WIDTH / 2) + LEFT_OFFSET_ADJUST , 'px')
          @media screen and (max-width: 1070px)
            left 100%
            margin-left unit(SUBJECT_WIDTH / 2, 'px')
  .readymade-home-page
    text-shadow none
    .readymade-footer
      display inline
    .readymade-call-to-action
      @extend .capitalized-text
      background-color LIME_GREEN
      color #fff
      box-shadow none
      border-radius 5px
      height 40px
      line-height 40px
      font-size 10px
      padding 0 20px
      &:hover
        background-color darken(LIME_GREEN, 5)

  .side-btn
    width 25%
    display inline-block
    overflow auto
    float left
    text-align center
    button
      @extend .capitalized-text
      width 100px
      letter-spacing 1px
      font-size 14px
      border 2px solid transparent
      border-radius 5px
      display inline-block
      height 50px
      transition-property background-position, background-color
      transition-duration 0.3s
      transition-timing-function ease
    #clouds-present
      float left
      background transparent
      border 2px solid #fff
      color #fff
      background url('./icons/clouds-txt.svg') no-repeat 50% -30px, url('./icons/cloud.svg') no-repeat center
      &.present
        background url('./icons/clouds-txt.svg') no-repeat 50% -30px, TURQ url('./icons/cloud.svg') no-repeat center
        &:hover
          background url('./icons/clouds-txt.svg') no-repeat 50% -30px, TURQ url('./icons/cloud.svg') no-repeat center
      &:hover
        background url('./icons/clouds-txt.svg') no-repeat center, url('./icons/cloud.svg') no-repeat 50% 80px
    #undo
      float right
      border 2px solid #fff
      display inline-block
      background url('./icons/undo-txt.svg') no-repeat 50% -30px, url('./icons/undo.svg') no-repeat center
      &:hover
        background url('./icons/undo-txt.svg') no-repeat center, url('./icons/undo.svg') no-repeat 50% 80px
      &:active
        background-color #fff
  #no-more-subjects
    width 100%
    text-align center
    padding-top 100px
    h1
      margin-bottom 40px
    a
      color LIME_GREEN

  // nav responsiveness
  @media screen and (max-width: 900px)
    .readymade-site-header
      background-color rgba(185, 214, 99, 0.67)
    .readymade-site-links
      margin 20px 0 0 0
      padding-bottom 20px
    .zooniverse-info.piece
      span
        display none
  @media screen and (max-width: 630px)
    .readymade-site-links
      display block
      .readymade-site-link
         padding 0
         margin-right 10px

  ::selection
    color #fff
    background AQUA
  ::-moz-selection
    color #fff
    background AQUA

  // __start loader__
  .subject-loader:before,
  .subject-loader:after,
  .subject-loader
    position absolute
    border-radius 50%
    width 2.5em
    height 2.5em
    -webkit-animation-fill-mode both
    animation-fill-mode both
    -webkit-animation load7 1.8s infinite ease-in-out
    animation load7 1.8s infinite ease-in-out

  .subject-loader
    position absolute
    top 120px
    left 50%
    margin 8em auto
    font-size 10px
    margin-left unit(-25/2, 'px')
    text-indent -9999em
    -webkit-animation-delay 0.16s
    animation-delay 0.16s

    &:before
      left -3.5em

    &:after
      left 3.5em
      -webkit-animation-delay 0.32s
      animation-delay 0.32s

    &:before, &:after
      content ''
      position absolute
      top 0

  @-webkit-keyframes load7
    0%,
    80%,
    100%
      box-shadow 0 2.5em 0 -1.3em #ffffff
    40%
      box-shadow 0 2.5em 0 0 #FFF

  @keyframes load7
    0%,
    80%,
    100%
      box-shadow 0 2.5em 0 -1.3em #ffffff
    40%
      box-shadow 0 2.5em 0 0 #FFF
  // __end loader__
